import dbSettings from "../environments";
const mysql = require("promise-mysql");

const category = async (req, res) => {
  const db = await mysql.createConnection(dbSettings);
  const output = await db.query("SELECT DISTINCT `category` FROM `products`");
  const categories = output.map((output) => output.categories);
  res.json({
    message: "Successfully found characters.",
    data: category,
  });
};

module.exports = category;
